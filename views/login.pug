extends layout

block content
    h1 Login
    form(method='POST', action='/users/login')
        .form-group
            label Username:
            input.form-control(name='username', type='text')
        .form-group
            label Password:
            input.form-control(name='password', type='password')
        a.btn.btn-secondary(href='/') Back
        span 
        input.btn.btn-primary(value='Submit', type='submit')
