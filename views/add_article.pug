extends layout

block content
    h1 #{title}
    form(method='POST', action='/articles/add')
        .form-group
            label Title:
            input.form-control(name='title', type='text')
        .form-group
            label Body:
            textarea.form-control(name='body')
        a.btn.btn-secondary(href='/') Back
        span 
        input.btn.btn-primary(value='Submit', type='submit')
